*
  transition all base-timing long-duration

body
  font-family 'Circular Normal', 'Helvetica Neue', Helvetica, sans-serif
  color gray

main
  width 85%
  margin 0 auto

nav
  display flex
  justify-content space-between
  align-items center

nav ul li
  list-style none
  display inline
  padding 10px

a
  text-decoration none
  color main-color
  darker-on-hover()
